<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".activity.HouseInfActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mainMarginLeft"
        android:layout_marginRight="@dimen/mainMarginRight"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="0dp"
            android:text="107-1402"
            android:textSize="@dimen/fontSize17"
            android:textColor="@color/headerText"            
             />

	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:orientation="horizontal"
	        android:gravity="right"
	    >
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="right"
	            android:paddingBottom="0dp"
	            android:text="교체결과: "
	            android:textSize="@dimen/fontSize17"
            android:textColor="@color/headerText"
	            />
	
	        <TextView
	            android:id="@+id/tv_state_info"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="left"
	            android:paddingBottom="0dp"
	            android:text="미완료/미송신"
	            android:textSize="@dimen/fontSize17"
            android:textColor="@color/headerText"
	            />
	    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/header1"
            android:gravity="center"
            android:text="수용가번호"
			android:textColor="@color/headerText"            
            android:textSize="@dimen/headerFontSize" />

        <TextView
            android:id="@+id/tv_house_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/list1"
             android:gravity="left|center_vertical"
             android:paddingLeft="5dp"
            android:text="~"
            android:textColor="@color/defaultText"
            android:textSize="@dimen/listFontSize" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1px"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/header1"
            android:gravity="center"
            android:text="고객번호"
            android:textColor="@color/headerText"
            android:textSize="@dimen/headerFontSize" />

        <TextView
            android:id="@+id/tv_cust_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/list1"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:text="~"
            android:textColor="@color/defaultText"
            android:textSize="@dimen/listFontSize" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headerHeight"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="1px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/header1"
            android:gravity="center"
            android:text="고객명"
            android:textColor="@color/headerText"
            android:textSize="@dimen/headerFontSize" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@color/list1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_cust_nm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/input_img"
                android:ellipsize="end"
                android:inputType="text"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="normal" 
                >
            </EditText>
        </LinearLayout>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/header1"
            android:gravity="center"
            android:text="상태"
            android:textColor="@color/headerText"
            android:textSize="@dimen/headerFontSize" />

        <TextView
            android:id="@+id/tv_house_status_nm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/list1"
            android:gravity="center"
            android:text="~"
            android:textColor="@color/defaultText"
            android:textSize="@dimen/listFontSize" />
                
    </LinearLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mainMarginLeft"
                android:layout_marginRight="@dimen/mainMarginRight"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_gm_error_yn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/line_square"
                    android:gravity="center"
                    android:text="불회확인 "
                    android:textColor="@color/defaultText"
                    android:textSize="15dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:clickable="false"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="체납:"
                android:textColor="@color/defaultText"
                android:textSize="@dimen/fontSize17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_che_price_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="123,560"
                android:textColor="@color/defaultText"
                android:textSize="@dimen/fontSize17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="원("
                android:textColor="@color/defaultText"
                android:textSize="@dimen/fontSize17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_che_month_cnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/defaultText"
                android:textSize="@dimen/fontSize17"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="개월)"
                android:textColor="@color/defaultText"
                android:textSize="@dimen/fontSize17"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.4"
            android:clickable="false"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ib_reconfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a0000000"
                android:src="@drawable/reconfirm_img" />
        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="15dp"
        android:background="@color/header1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:background="@color/list1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/header1"
                android:gravity="center"
                android:text="자택"
            android:textColor="@color/headerText"
                android:textSize="@dimen/headerFontSize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/list1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_tel_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/input_img"
                    android:ellipsize="end"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rd_tel_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_img"
            android:textColor="@color/headerText"                    
                    android:text=" 주사용" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:background="@color/list1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
                         android:layout_marginBottom="1px"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/header1"
                android:gravity="center"
                android:text="이동"
            android:textColor="@color/headerText"
                android:textSize="@dimen/headerFontSize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/list1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_hp_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/input_img"
                    android:ellipsize="end"
                    android:inputType="textPhonetic"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rd_hp_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_img"
            android:textColor="@color/headerText"                    
                    android:text=" 주사용" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:background="@color/list1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/header1"
                android:gravity="center"
                android:text="회사"
            android:textColor="@color/headerText"
                android:textSize="@dimen/headerFontSize" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/list1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_work_tel_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/input_img"
                    android:ellipsize="end"
                    android:inputType="textPhonetic"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rd_work_tel_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radio_img"
            android:textColor="@color/headerText"                    
                    android:text=" 주사용" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/mainMarginLeft"
        android:layout_marginRight="@dimen/mainMarginRight"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_customer_info_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a0000000"
            android:src="@drawable/b_customer" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginLeft="@dimen/mainMarginLeft"
        android:layout_marginRight="@dimen/mainMarginRight"
        android:layout_marginTop="27dp"
        android:background="@drawable/shape_line1" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:orientation="horizontal" >
        
		<ImageButton
            android:id="@+id/ib_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="#a0000000"
            android:src="@drawable/g_starting_img" />

        <ImageButton
            android:id="@+id/ib_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="#a0000000"
            android:src="@drawable/b_cancel_img" />

        <ImageButton
            android:id="@+id/ib_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a0000000"
            android:src="@drawable/b_modify_img"
             />
    </LinearLayout>

</LinearLayout>