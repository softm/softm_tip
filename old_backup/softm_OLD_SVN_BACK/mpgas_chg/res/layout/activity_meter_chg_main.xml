<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/mainMarginBottom"
        android:layout_marginLeft="@dimen/mainMarginLeft"
        android:layout_marginRight="@dimen/mainMarginRight"
        android:layout_marginTop="@dimen/mainMarginTop"
        android:background="@drawable/shape_bg_round_rectangle"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="37dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/bullet02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_gauge_img"
                android:src="@drawable/bullet02"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="8dp"                
            />

            <ImageView
                android:id="@+id/iv_gauge_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@drawable/gauge_img" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/bullet02"
                android:text="계량기교체"
                android:textColor="#fc7979"
                android:textSize="@dimen/fontSize22" />
        <LinearLayout
            android:id="@+id/ll_yyyymm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
                  android:layout_alignLeft="@+id/bullet02"
                android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_yyyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize17" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize17" />
            <TextView
                android:id="@+id/tv_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize17" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize17" />
</LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="총건수"
                android:textColor="@color/white"
                android:textSize="@dimen/headerFontSize"
                android:gravity="center"
                android:background="@color/header2" 
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="@dimen/headerFontSize"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/header2"                
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="미완료"
                android:textColor="@color/white"
                android:textSize="@dimen/headerFontSize"
                android:gravity="center"
                android:layout_marginLeft="1dp"                
                android:background="@color/header2"
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="미송신"
                android:textColor="@color/white"
                android:textSize="@dimen/headerFontSize"
                android:gravity="center"
                android:layout_marginLeft="1dp"                
                android:background="@color/header2"
                /> 
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="총건수"
                android:textColor="@color/white"
                android:textSize="@dimen/listFontSize"
                android:gravity="center"
                android:background="@color/list1" 
                android:id="@+id/t_cnt"
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="@dimen/listFontSize"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/list1"
                android:id="@+id/c_cnt"
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="미완료"
                android:textColor="@color/white"
                android:textSize="@dimen/listFontSize"
                android:gravity="center"
                android:layout_marginLeft="1dp"                
                android:background="@color/list1"
                android:id="@+id/nc_cnt"
                /> 
          <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/headerHeight"
                android:layout_weight="1"
                android:text="미송신"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSize17"
                android:gravity="center"
                android:layout_marginLeft="1dp"                
                android:background="@color/list1"
                android:id="@+id/ns_cnt"                
                /> 
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_send_img"
                android:background="#00000000"
            />

            <ImageButton
                android:id="@+id/btn_receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/b_receive_img"
                android:background="#00000000"
            />

            <ImageButton
                android:id="@+id/btn_gauge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"                
				android:src="@drawable/b_gauge_img"  
                android:background="#00000000"
            />
        </LinearLayout>        
    </LinearLayout>
</LinearLayout>
