<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_layout_height"
    android:paddingLeft="@dimen/title_left_padding"
    android:paddingRight="@dimen/title_right_padding"
    android:background="@drawable/top_bg" >

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:background="@drawable/previous_img"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn_back"
        android:ellipsize="end"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowDx="0"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text="민원 메인"
        android:textColor="@android:color/white"
        android:textSize="21sp" />

    <ImageButton
        android:id="@+id/btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:background="@drawable/list_pressed_img"
        android:scaleType="fitXY"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/btn_one"
        android:scaleType="fitXY"
        android:visibility="gone" />

</RelativeLayout>