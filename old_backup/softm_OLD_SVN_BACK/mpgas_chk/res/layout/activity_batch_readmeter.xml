<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".BldgListActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mainMarginBottom"
        android:layout_marginLeft="@dimen/mainMarginLeft"
        android:layout_marginRight="@dimen/mainMarginRight"
        android:layout_marginTop="@dimen/mainMarginTop"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="12dp" >

                <TextView
                    android:id="@+id/tv_info"
                    style="@style/MP.top_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="4"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:text="하당부영1차 101 1505" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:gravity="center"
                    android:text="수용가번호" />

                <TextView
                    android:id="@+id/tv_house_no"
                    style="@style/MP.td"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="3001159" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mainBgColor" />
                        
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:gravity="center"
                    android:text="상태" />

                <TextView
                    android:id="@+id/tv_house_status_nm"
                    style="@style/MP.td"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="공급중" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="@color/mainBgColor" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:gravity="center"
                    android:text="위치" />

                <TextView
                    android:id="@+id/tv_install_loc_gb_cd"
                    style="@style/MP.td"
                    android:layout_span="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="실외" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mainBgColor" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:gravity="center"
                    android:text="용도" />

                <TextView
                    android:id="@+id/tv_purpose_cd"
                    style="@style/MP.td"
                    android:layout_span="3"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="개별난방용" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mainBgColor" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:gravity="center"
                    android:text="계량기번호" />

                <TextView
                    android:id="@+id/tv_gm_no"
                    style="@style/MP.td"
                    android:layout_span="3"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="149312042583" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:background="@color/mainBgColor" />
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.th"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="구분" />

                <TextView
                    style="@style/MP.th"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="전월" />

                <TextView
                    style="@style/MP.th"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="당월" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mainBgColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/MP.td"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="지침" />

                <TextView
                    android:id="@+id/tv_bf_meter"
                    style="@style/MP.td"
                    android:layout_width="0dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="723" />

                <LinearLayout
                    style="@style/MP.td"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp" >

                    <EditText
                        android:id="@+id/et_checkup_meter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_img"
                        android:ellipsize="end"
                        android:inputType="number"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:textStyle="normal" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mainBgColor" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_line1" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="4" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ib_prev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_prior" />

                <ImageButton
                    android:id="@+id/ib_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/btn_save" />

                <ImageButton
                    android:id="@+id/ib_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_next" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>