<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".MngBoilerChkActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mainMarginLeft"
            android:layout_marginRight="@dimen/mainMarginRight"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_info"
                        style="@style/MP.top_title"
                        android:layout_span="4"
                        android:singleLine="true"
                        android:text="옥암동 1023 하당부영1차 아파트 107-1402" />
                </TableRow>

                <TableRow
                    style="@style/MP.thead"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|center" >

                    <LinearLayout
                        style="@style/MP.th"
                        android:layout_width="wrap_content"
                        android:layout_span="4"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_prev"
                            style="@style/MP.th"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:drawable/list_selector_background"
                            android:gravity="center_vertical"
                            android:text="＜＜"
                            android:textColor="@color/defaultText" />

                        <TextView
                            android:id="@+id/tv_position_info"
                            style="@style/MP.th"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center"
                            android:text="1/3"
                            android:textColor="@color/defaultText" />

                        <TextView
                            android:id="@+id/tv_next"
                            style="@style/MP.th"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@android:drawable/list_selector_background"
                            android:gravity="center_vertical"
                            android:text="＞＞"
                            android:textColor="@color/defaultText" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="제조사" />

                    <TextView
                        android:id="@+id/tv_maker_nm"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="대성셀틱" />

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="제조번호" />

                    <TextView
                        android:id="@+id/tv_make_no"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="1313131" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#0c2336" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="모델명" />

                    <TextView
                        android:id="@+id/tv_model_nm"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="SR-2.16" />

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="제조년도" />

                    <TextView
                        android:id="@+id/tv_make_yy"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="2014/06/01" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/mainBgColor" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="시공자" />

                    <TextView
                        android:id="@+id/tv_install_user_nm"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="이OO" />

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="무단시공" />

                    <TextView
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="무" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/mainBgColor" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="시공업체" />

                    <TextView
                        android:id="@+id/tv_install_co_nm"
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:text="OO난방시스템" />

                    <TextView
                        style="@style/MP.th"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true" />

                    <TextView
                        style="@style/MP.td"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:singleLine="true" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:background="#0c2336" />
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageButton
                    android:id="@+id/ib_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#a0000000"
                    android:src="@drawable/camera" />

                <ImageButton
                    android:id="@+id/ib_photoview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#a0000000"
                    android:src="@drawable/photoview" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/TableLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_span="2" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

<!-- 
                        <TextView
                            style="@style/MP.sub_title"
                            android:text="▶ "
                            android:textColor="@color/white" />
 -->
			            <ImageView
			                style="@style/MP.sub_title"
			                android:src="@drawable/w_bullet"
			                android:layout_marginRight="5dp"
			            />
                        <TextView
                            style="@style/MP.sub_title"
                            android:text="보일러 " />

                        <CheckBox
                            android:id="@+id/rd_none"
                            style="@style/MP.h1"
                            android:text=" 기기없음" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.entropykorea.gas.lib.ListViewMP
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:divider="@color/listDivColor"
                    android:dividerHeight="@dimen/listDividerHeight"
                    android:drawSelectorOnTop="true"
                    android:listSelector="@drawable/listview_item_selector" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_marginBottom="27dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/shape_line1" >
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="27dp"
                android:layout_span="3" >

                <ImageButton
                    android:id="@+id/ib_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_save" />

                <ImageButton
                    android:id="@+id/ib_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_close" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>