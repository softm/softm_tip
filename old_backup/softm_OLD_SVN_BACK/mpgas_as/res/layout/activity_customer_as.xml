<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c2336" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/side_bottom_padding"
        android:paddingLeft="@dimen/side_left_padding"
        android:paddingRight="@dimen/side_right_padding"
        android:paddingTop="@dimen/side_top_padding" >

        <TableLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/row_one_title_coulmn_padding"
                android:paddingLeft="@dimen/row_one_title_row_padding"
                android:paddingRight="@dimen/row_one_title_row_padding" >

                <TextView
                    android:id="@+id/ADDRESS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/fontSize" />
            </LinearLayout>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="수용가번호"
                    android:textSize="@dimen/fontSize" />

                <TextView
                    android:id="@+id/HOUSE_NO"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_span="5"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="고객번호"
                    android:textSize="@dimen/fontSize" />

                <TextView
                    android:id="@+id/CUST_NO"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="5"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/fontSize" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="고객명"
                    android:textSize="@dimen/fontSize" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="5"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/tv_CUST_NM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/fontSize"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/et_CUST_NM"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_img"
                        android:imeOptions="actionDone"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fontSize"
                        android:textStyle="normal"
                        android:visibility="gone" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="자택"
                    android:textSize="@dimen/fontSize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="5" >

                    <LinearLayout
                        android:id="@+id/ch_one"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:baselineAligned="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/ch_TEL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/checked_radio" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="주사용"
                            android:textSize="@dimen/fontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/ch_one"
                        android:baselineAligned="true"
                        android:gravity="center" >

                        <EditText
                            android:id="@+id/TEL_NO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_img"
                            android:hint="자택"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize"
                            android:textStyle="normal" />
                    </LinearLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="이동"
                    android:textSize="@dimen/fontSize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="5" >

                    <LinearLayout
                        android:id="@+id/ch_two"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:baselineAligned="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/ch_WORK_TEL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radio" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="주사용"
                            android:textSize="@dimen/fontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/ch_two"
                        android:baselineAligned="true"
                        android:gravity="center" >

                        <EditText
                            android:id="@+id/WORK_TEL_NO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_img"
                            android:hint="이동"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize"
                            android:textStyle="normal" >
                        </EditText>
                    </LinearLayout>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="#3a4763" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@color/CellHeader"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="회사"
                    android:textSize="@dimen/fontSize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="5" >

                    <LinearLayout
                        android:id="@+id/ch_thr"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:baselineAligned="true"
                        android:gravity="center_vertical" >

                        <ImageView
                            android:id="@+id/ch_HP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radio" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:ellipsize="marquee"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="주사용"
                            android:textSize="@dimen/fontSize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/ch_thr"
                        android:baselineAligned="true"
                        android:gravity="center" >

                        <EditText
                            android:id="@+id/HP_NO"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_img"
                            android:hint="회사"
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fontSize"
                            android:textStyle="normal" >
                        </EditText>
                    </LinearLayout>
                </RelativeLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:orientation="horizontal"
            android:weightSum="4" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/b_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/b_save" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>