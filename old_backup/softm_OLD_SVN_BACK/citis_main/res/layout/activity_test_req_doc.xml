<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".activity.TestReqDocActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_vertical"
        >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/mainMarginBottom"
	        android:layout_marginLeft="@dimen/mainMarginLeft"
	        android:layout_marginRight="@dimen/mainMarginRight"
	        android:layout_marginTop="@dimen/mainMarginTop"
	        android:gravity="top|center_vertical"
	        android:orientation="vertical"
	        android:weightSum="1" >
	
			
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"

	    android:orientation="horizontal" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="번호"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                 
                 >

                <EditText
                    android:id="@+id/et_ispn_rqsts_no"
        style="@style/MP.edittext"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLength="20"
        android:singleLine="true"
        android:text=""
        android:textStyle="normal"
		android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "        
        android:editable="false"
        android:enabled="true"   
                    android:textSize="17sp"
                    >
                </EditText>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="검측요청일"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_rqsts_dt"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="받음"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_cusr"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="공종"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                 >
				<TextView
        			android:id="@+id/tv_cnsttypenm"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="세부공종"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_dtlcnsttypenm"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="위치"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_plc_prt"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="검측부위"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                
                 >
                <EditText
                    android:id="@+id/et_ispn_prt"
        style="@style/MP.edittext"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLength="50"
        android:singleLine="true"
        android:text=""
        android:textStyle="normal"
                    android:textSize="17sp"
                    >
                </EditText>
            </LinearLayout>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="검측요구일시"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center|left"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                
                 >
    <EditText
        android:id="@+id/et_ispn_call_tm"
        style="@style/MP.edittext"
        android:layout_width="145dp"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:inputType="text"
        android:maxLength="10"
        android:singleLine="true"
        android:text=""
        android:textStyle="normal"
        android:editable="false"
        android:enabled="true"   
        />
<!--     
    android:src="@android:drawable/ic_menu_my_calendar"        
-->
	<ImageButton
        android:id="@+id/ib_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	android:src="@android:drawable/ic_menu_month"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
	/>
            </LinearLayout>
                        
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="검측사항"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                
                 >
                <EditText
                    android:id="@+id/et_ispn_dtls"
        style="@style/MP.edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLength="400"
        android:singleLine="false"
        android:lines="3"
        android:text=""
        android:textStyle="normal"
                    android:textSize="17sp"
                    >
                </EditText>
            </LinearLayout>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="점검직원"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                 
                 >
				<TextView
        			android:id="@+id/tv_chk_user_nm"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="현장대리인"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_susr"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>
        </TableLayout>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" 
                >
			<Button
		    android:id="@+id/btn_save"
		    style="@style/MP.button2"
		    android:text="임시저장"
		    android:layout_gravity="center_vertical"
		    android:visibility="gone"
		    />
			<Button
		    android:id="@+id/btn_end"
		    style="@style/MP.button2"
		    android:text="확정"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="5dp"
		    android:visibility="gone"
		    />
            </LinearLayout>
	</LinearLayout>
	</FrameLayout>
</LinearLayout>
