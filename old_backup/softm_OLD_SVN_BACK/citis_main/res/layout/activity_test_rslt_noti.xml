<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBgColor"
    android:orientation="vertical"
    tools:context=".activity.TestReqDocActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_vertical"
        >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/mainMarginBottom"
	        android:layout_marginLeft="@dimen/mainMarginLeft"
	        android:layout_marginRight="@dimen/mainMarginRight"
	        android:layout_marginTop="@dimen/mainMarginTop"
	        android:gravity="top|center_vertical"
	        android:orientation="vertical"
	        android:weightSum="1" >
	
            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
             	android:fillViewport="true" 
             	android:layout_weight="0.9"
			>
			
	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"

	    android:orientation="horizontal" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="번호"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                 
                 >
<TextView
        			android:id="@+id/tv_ispn_rqsts_no"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
                
            </LinearLayout>
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="받음"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_cusr"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight5"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="검측결과"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                 >
	            <LinearLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="3.5"
	                android:gravity="center_vertical"
	                android:orientation="vertical"
	                 >

		
				  <LinearLayout
					                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="1"
					                android:layout_gravity="center_vertical"
					                android:clickable="false"
					                android:gravity="left|center_vertical"
					                android:orientation="horizontal"
					                    android:paddingLeft="@dimen/headerPaddingLeft"
					                    android:paddingRight="@dimen/headerPaddingRight"	
					                 >
					
		<CheckBox
		    android:id="@+id/chk_rslt_status_t"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical|center_horizontal|center"
		    android:gravity="center_vertical|center_horizontal|center"
		    android:text="" />
		 					<TextView
	        			android:id="@+id/tv_t"	               
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="적합"
	                	style="@style/MP.th.td"                
		                />
					
		<CheckBox
		    android:id="@+id/chk_rslt_status_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical|center_horizontal|center"
		    android:gravity="center_vertical|center_horizontal|center"
		    android:text="" />
		 					<TextView
	        			android:id="@+id/tv_f"	               
		                android:layout_width="wrap_content"
		                android:layout_height="match_parent"
		                android:text="부적합"
	                	style="@style/MP.th.td"                
		                />
		    
					     </LinearLayout>
					  <LinearLayout
					                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="2"
					                android:layout_gravity="center_vertical"
					                android:clickable="false"
					                android:gravity="center"
					                android:orientation="horizontal"
					                    android:paddingLeft="@dimen/headerPaddingLeft"
					                    android:paddingRight="@dimen/headerPaddingRight"	                
					                 >
					                <EditText
					                    android:id="@+id/et_rslt_dtls"
					        style="@style/MP.edittext"
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
        android:singleLine="false"
        android:lines="5"					        
					        android:layout_gravity="center_vertical"
					        android:ellipsize="end"
					        android:maxLength="400"
					        android:text=""
					        android:textStyle="normal"
					                    android:gravity="top"
        android:paddingTop="@dimen/editTextPaddingTop"					                    
					                    >
					                </EditText>
					            </LinearLayout>					
				</LinearLayout>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight4"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="지시사항"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3.5"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                
                 >
                <EditText
                    android:id="@+id/et_rslt_instr"
        style="@style/MP.edittext"
        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
        android:singleLine="false"
        android:lines="5"					         
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLength="50"
        android:text=""
        android:textStyle="normal"
        android:paddingTop="@dimen/editTextPaddingTop"
					                    android:gravity="top"
                    >
                </EditText>
            </LinearLayout>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:background="@color/header2"
            android:gravity="center_vertical"
            android:minHeight="@dimen/headerHeight"
            android:layout_marginBottom="1px"
             >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"                
                android:text="점검직원"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                    android:paddingLeft="@dimen/headerPaddingLeft"
                    android:paddingRight="@dimen/headerPaddingRight"	                 
                 >
				<TextView
        			android:id="@+id/tv_eng_nm1"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/MP.th"
                android:text="현장대리인"
		 />
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal" >
				<TextView
        			android:id="@+id/tv_eng_nm2"	               
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:text="-"
                	style="@style/MP.th.td"                
	                />
            </LinearLayout>
        </TableRow>
        </TableLayout>
            </ScrollView>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:orientation="horizontal"
                android:layout_marginTop="5dp" 
                >
			<Button
		    android:id="@+id/btn_save"
		    style="@style/MP.button2"
		    android:text="임시저장"
		    android:layout_gravity="center_vertical"
		    android:visibility="gone"
		    />
			<Button
		    android:id="@+id/btn_end"
		    style="@style/MP.button2"
		    android:text="확정"
		    android:layout_gravity="center_vertical"
		    android:layout_marginLeft="5dp"
		    android:visibility="gone"
		    />
            </LinearLayout>
	</LinearLayout>
	</FrameLayout>
</LinearLayout>
