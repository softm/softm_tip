<resources xmlns:android="http://schemas.android.com/apk/res/android">
<style name="MP.button1">
        <item name="android:background">@drawable/button1_img</item>					
        <item name="android:textColor">@drawable/button1_textcolor</item>
		<item name="android:layout_height">@dimen/buttonHeight</item>
		<item name="android:gravity">center_vertical</item>		
		<item name="android:textSize">@dimen/buttonFontSize</item>		
</style>
<style name="MP.button2">
        <item name="android:background">@drawable/button2_img</item>    
        <item name="android:textColor">@drawable/button2_textcolor</item>        
		<item name="android:layout_height">@dimen/buttonHeight</item>
		<item name="android:gravity">center_vertical</item>		
		<item name="android:textSize">@dimen/buttonFontSize</item>		
</style>

<style name="MP.edittext">
        <item name="android:layout_width">match_parent</item>					
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/input_img</item>
        <item name="android:textSize">@dimen/editTextFontSize</item>
</style>

    <style name="MP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="MP.thead" parent="MP">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@color/listHeader</item>
    </style>
    <style name="MP.tbody" parent="MP">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>
        
    <style name="MP.th" parent="MP">
        <item name="android:layout_height">@dimen/headerHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/header1</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">@dimen/headerFontSize</item>
        <item name="android:paddingLeft">@dimen/headerPaddingLeft</item>
        <item name="android:paddingRight">@dimen/headerPaddingRight</item>
        <item name="android:gravity">center|left</item>
    </style>
    <style name="MP.th.td" parent="MP">
        <item name="android:layout_height">@dimen/headerHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/header2</item>        
        <item name="android:textColor">@color/headerText2</item>
        <item name="android:textSize">@dimen/headerFontSize</item>
        <item name="android:paddingLeft">@dimen/headerPaddingLeft</item>
        <item name="android:paddingRight">@dimen/headerPaddingRight</item>
        <item name="android:gravity">center|left</item>
    </style>
    
    
    <style name="MP.td" parent="MP">
        <item name="android:layout_height">@dimen/listHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/list1</item>
        <item name="android:textColor">@color/listText</item>
        <item name="android:textSize">@dimen/listFontSize</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="MP.top_title" parent="MP">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/mainBgColor</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">@dimen/fontSize21</item>
    </style>

    <style name="MP.bullet" parent="MP">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">18dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">@dimen/fontSize22</item>
    </style>
    
    <style name="MP.sub_title" parent="MP">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">@dimen/headerFontSize</item>
    </style>
    <style name="MP.h1" parent="MP">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/headerText</item>
        <item name="android:textSize">@dimen/headerFontSize</item>
    </style>
</resources>