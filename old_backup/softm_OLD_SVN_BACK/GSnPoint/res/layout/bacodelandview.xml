<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="#f6f6f6"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"	
		android:gravity="center">

		<RelativeLayout
			android:layout_width="422dip"   
			android:layout_height="243dip"
			android:background="@drawable/barcode_big_bg">
		 
			<TextView  	
				android:id="@+id/barcode_txt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="10dp"
				android:textColor="#000000"
				android:text="888"
				android:textSize="20dip"
				 />	
			<kr.co.gscaltex.gsnpoint.card.Barcode
				android:id="@+id/land_barcode_view"
				android:layout_width="fill_parent"
				android:layout_height="100dip"
				android:layout_above="@id/barcode_txt"
				/>
			<TextView  	
				android:id="@+id/cvc_txt"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_above="@id/land_barcode_view"
				android:layout_marginRight="50dp"
				android:text="888"
				android:textColor="#fa9c28"
				android:textSize="20sp"
				 />	
			<TextView  	
				android:id="@+id/cvc_txt2"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/cvc_txt"
				android:layout_above="@id/land_barcode_view"
				android:text="CVC "
				android:textColor="#fa9c28"
				android:textSize="20dip"
				 />	
		</RelativeLayout>

	</LinearLayout>

</LinearLayout>