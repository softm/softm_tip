<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFF">
   <!--
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/point_bar_bg02"
        android:contentDescription="리스트 아이템 라인"
    />  
    -->
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        >

         <TextView
          android:id="@+id/txt_id"
          android:layout_toRightOf="@+id/img_star5"
          android:text="gspoint님"
          android:textSize="12dip"
          android:textColor="#000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
           android:layout_alignParentLeft="true" 
          android:layout_marginTop="-1dip"
          android:layout_marginBottom="2dip"
          android:layout_marginLeft="2dip"
        />
         
       
         <ImageView
             android:id="@+id/img_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       android:layout_below="@+id/txt_id"
        android:background="@drawable/icon_star_gray"
   	 	/>  
   	 	 <ImageView
             android:id="@+id/img_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_star1"
        android:layout_below="@+id/txt_id"
        android:background="@drawable/icon_star_gray"
   	 	/>  
   	 	 <ImageView
             android:id="@+id/img_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_star2"
        android:layout_below="@+id/txt_id"
        android:background="@drawable/icon_star_gray"
   	 	/>  
   	 	 <ImageView
             android:id="@+id/img_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_star3"
        android:layout_below="@+id/txt_id"
        android:background="@drawable/icon_star_gray"
   	 	/>  
   	 	 <ImageView
             android:id="@+id/img_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_star4"
        android:layout_below="@+id/txt_id"
        android:background="@drawable/icon_star_gray"
   	 	/>  
        <TextView
          android:id="@+id/lst_itm_split"
          android:layout_toRightOf="@+id/img_star5"
          android:layout_below="@+id/txt_id"
          android:text="|"
          android:textColor="#B6B6B6"
          android:textSize="14dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-2dip"
          android:layout_marginLeft="2dip"
        />
        <TextView
          android:id="@+id/lst_itm_save_date"
           android:layout_toRightOf="@+id/lst_itm_split"
            android:layout_below="@+id/txt_id"
          android:text="2011.11.22"
          android:textColor="#B6B6B6"         
          android:textSize="12dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
        
      
         <TextView
            android:id="@+id/lst_itm_comment"
            android:layout_width="300dip"
            android:layout_height="wrap_content"   
             android:layout_below="@+id/lst_itm_save_date"                    
            android:layout_marginTop="2dip"
            android:layout_marginRight="6dp"
            android:layout_alignParentLeft="true" 
            android:text="가격면에서는 별다섯개!!! 가격싸면 최고임."
             android:textColor="#B6B6B6"
            android:textSize="12dip" />
         
     
    </RelativeLayout>
    
   
</LinearLayout>