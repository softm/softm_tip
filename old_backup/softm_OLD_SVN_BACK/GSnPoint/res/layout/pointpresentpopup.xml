<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">


<LinearLayout 
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center|top"
	android:layout_marginTop="16dip"
	android:orientation="vertical"
	android:background="@drawable/point_present_popup_bg" >

    <ImageButton 
        	android:id="@+id/btn_close"
		   	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:layout_gravity="right"
	    	android:background="@drawable/btn_close_img"/>
    
    <EditText
	    android:id="@+id/edit_popup_name"
	    android:layout_width="140dip"
	    android:layout_height="20dip"
	    android:layout_marginRight="34dip"
	    android:layout_marginTop="16dip"
	    android:background="#ffffffff"
	    android:layout_gravity="right"
	    android:textSize="14dip"  
	     android:maxLength="10"
	    android:singleLine="true" 
	    android:inputType="text"
	    android:hint="이름을 입력하세요"
	    />
    <LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="18dip"
		android:layout_marginLeft="32dip"
		android:orientation="horizontal"
		 >
		<ImageButton 
		    android:id="@+id/chb_phone"
		   	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:background="@drawable/radio_phone_on"
	    	/>
	    <EditText
		    android:id="@+id/edit_phone"
		    android:layout_width="140dip"
		    android:layout_height="20dip"
		    android:layout_marginTop="3dip"
		    android:layout_marginLeft="30dip"
		    android:background="#ffffffff"
		    android:layout_gravity="right"
		    android:textSize="14dip" 
		    android:inputType="number"
		    android:maxLength="15"
	       android:singleLine="true" 
		    android:hint="번호를 입력하세요"/>
    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dip"
		android:layout_marginLeft="32dip">
		<ImageButton 
		    android:id="@+id/chb_email"
		   	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:background="@drawable/radio_email_off"/>
	    <EditText
		    android:id="@+id/edit_email1"
		    android:layout_width="56dip"
		    android:layout_height="20dip"
		    android:layout_marginTop="2dip"
		    android:layout_marginLeft="30dip"
		    android:background="#ffffffff"
		    android:textSize="14dip" 
		    android:maxLength="10"
	        android:singleLine="true" 
		    />
	    <EditText
		    android:id="@+id/edit_email2"
		    android:layout_width="60dip"
		    android:layout_height="20dip"
		    android:layout_marginTop="2dip"
		    android:layout_marginLeft="26dip"
		    android:background="#ffffffff"
		    android:textSize="14dip" 
		    android:maxLength="15"
		    android:inputType="textEmailAddress"
	        android:singleLine="true"/>
    </LinearLayout>
    
    <kr.co.gscaltex.gsnpoint.SpinnerGS
	        android:id="@+id/spn_emailtype"
	        android:layout_width="150dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_marginTop="8dip"
	        android:layout_marginRight="32dip"
	        android:prompt="@string/spinner_email_type" />
    
    <ImageButton 
         	android:id="@+id/btn_search"
        	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/btn_search_big_img"
		    android:layout_marginTop="18dip"
		    android:layout_gravity="center"/>
   
    <LinearLayout 
        android:id="@+id/layout_display"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="35dip"
		android:layout_marginLeft="120dip"
		android:orientation="vertical"
		android:visibility="gone">
		<TextView 
		    android:id="@+id/txt_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:textSize="16dip"
			android:textColor="#FF7200"/>
		<TextView 
		    android:id="@+id/txt_phone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			
			android:textSize="16dip"
			android:textColor="#000"/>
		<TextView 
		    android:id="@+id/txt_email"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="9dip"
			
			android:textSize="16dip"
			android:textColor="#000"/>
    </LinearLayout>
    
	<ImageView 
	    android:id="@+id/img_popup_nodata"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dip"
		android:background="@drawable/point_present_popup_nodata"
		android:visibility="visible"/>
	  
	
</LinearLayout>
</LinearLayout>
