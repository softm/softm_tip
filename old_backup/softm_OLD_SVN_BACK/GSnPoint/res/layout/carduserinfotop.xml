<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="top"
				    android:orientation="horizontal" 
				    android:layout_marginLeft="9dp">
					<ImageView
						android:id="@+id/my_picture"
						android:src="@drawable/set_mainimg_photobox"
						android:layout_width="60dip" 
						android:layout_height="60dip"
					/>
			</LinearLayout>
			<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="top"
				    android:orientation="vertical" 
				    android:layout_marginLeft="8dip">
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="78dip"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dip">
						<TextView
							android:id="@+id/login_name"
							android:textColor="#000"
							android:textSize="14dip"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<TextView
							android:text="ë‹˜ "
							android:textColor="#000"
							android:textSize="12dp"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="1dp" />
				</LinearLayout>
				<!--  
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						<TextView
							android:text=""
							android:textColor="#AAA"
							android:textSize="11dip"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				-->
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="1dip"
						android:gravity="bottom">
						<TextView
							android:id="@+id/point_txt"
							
							android:textColor="#FFFF6C00"
							android:textSize="14dp"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginTop="-2dp" />
						<TextView
							android:text="P "
							android:textColor="#000"
							android:textSize="14dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				
			</LinearLayout> <!-- Vertical -->
			<LinearLayout
				    
				    android:layout_height="wrap_content"
				    android:layout_width="wrap_content"
				    android:layout_weight="1"
				    android:gravity="top"
				    android:orientation="vertical" 			    
					android:layout_marginLeft="5dip">

			 
					<ImageButton
						android:id="@+id/btn_open"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="right"						
						android:src="@drawable/btn_pi_open"
						android:background="@android:color/transparent"
						android:layout_marginRight="11dip"/>
			
			
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:layout_marginLeft="2dp">
						<ImageView
							android:src="@drawable/card_text05"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"/>
						<TextView
							android:id="@+id/gift_point"
							
							android:textColor="#000"
							android:textSize="11dip"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_marginLeft="10dp" />
						<TextView
							android:text="P "
							android:textColor="#000"
							android:textSize="11dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="2dp">
						<ImageView
							android:src="@drawable/card_text06"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center_vertical"/>
						<TextView
						    android:id="@+id/branch_name_txt"
						    android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_marginLeft="8dp"				
							android:textColor="#75C1C4"
							android:textSize="10dp"
							android:singleLine="true"
							android:ellipsize="end"
							 />

				</LinearLayout>
				
				
				
			</LinearLayout> <!-- Vertical -->
			
		</LinearLayout>>

	</RelativeLayout>
