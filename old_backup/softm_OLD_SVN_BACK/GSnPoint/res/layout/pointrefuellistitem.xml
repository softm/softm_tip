<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFF">
   <!--
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/point_bar_bg02"
        android:contentDescription="리스트 아이템 라인"
    />  
    -->
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip" 
        >

        <TextView
          android:id="@+id/lst_itm_save_date"
          android:text="2011.11.22"
          android:textColor="#B6B6B6"         
          android:textSize="12dip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
        
         <TextView
          android:id="@+id/lst_itm_save_fuel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"       
          android:layout_alignParentRight="true" 
          android:layout_marginLeft="2dip"
          android:text="유종:휘발유  주유량:100,000L 금액:8,000,000원"
          android:textColor="#000"         
          android:textSize="11dip"
          />
         <TextView
            android:id="@+id/lst_itm_franch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
             android:layout_below="@+id/lst_itm_save_date"                    
            android:layout_marginTop="4dip"
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true" 
            android:text="GS홈쇼핑"
            android:textColor="#000"
            android:textSize="16dip" />
         
     
    </RelativeLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/point_bar_bg02"
        android:contentDescription="리스트 아이템 라인"
    />
   
</LinearLayout>