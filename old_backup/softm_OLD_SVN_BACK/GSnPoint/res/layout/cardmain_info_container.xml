<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout 
         android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:background="@drawable/personal_information_bg_edit"
           android:id="@+id/searcher_box">
         
            
         <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="top"
				    android:orientation="horizontal" 
				    android:layout_marginLeft="9dp">
					<ImageView
						android:id="@+id/my_picture2"
						android:src="@drawable/set_mainimg_photobox"
						android:layout_width="60dip" 
						android:layout_height="60dip"
					/>
			</LinearLayout>
			<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="top"
				    android:orientation="vertical" 
				    android:layout_marginLeft="8dp">
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="78dip"
						android:layout_height="wrap_content"
						android:layout_marginTop="16dip">
						<TextView
							android:id="@+id/login_name2"
							android:text=""
							android:textColor="#000"
							android:textSize="14dip"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
						<TextView
							android:text="님 "
							android:textColor="#000"
							android:textSize="12dp"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="1dp" />
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="1dip"
						android:gravity="bottom">
						<TextView
							android:id="@+id/point_txt2"
							android:text=""
							android:textColor="#FFFF6C00"
							android:textSize="14dp"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="2dp"
							android:layout_marginTop="-2dp" />
						<TextView
							android:text="P "
							android:textColor="#000"
							android:textSize="14dp"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"/>
				</LinearLayout>
				
			</LinearLayout> <!-- Vertical -->
			<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:gravity="top"
				    android:orientation="vertical" 
				    android:layout_marginTop="24dip"
					android:layout_marginLeft="5dip">

				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="140dip"
						android:layout_height="wrap_content"
						android:layout_marginTop="3dp"
						android:layout_marginLeft="2dp">
						<ImageView
							android:src="@drawable/card_text05"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"/>
						<TextView
							android:id="@+id/gift_point2"
							android:text=""
							android:textColor="#000"
							android:textSize="11dip"
							android:singleLine="true"
							android:ellipsize="end"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_marginLeft="7dip" />
						<TextView
							android:text="P "
							android:textColor="#000"
							android:textSize="11dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"/>
				</LinearLayout>
				<LinearLayout
						android:orientation="horizontal"
						android:layout_width="150dip"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dip"
						android:layout_marginLeft="2dp">
						<ImageView
							android:src="@drawable/card_text06"
							android:layout_width="wrap_content" 
							android:layout_height="wrap_content" 
							android:layout_gravity="center_vertical"/>
						<TextView
							android:id="@+id/branch_name_txt2"
							android:text=""
							android:textColor="#75C1C4"
							android:textSize="10dip"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_marginLeft="7dip"
							android:singleLine="true"
                        	android:ellipsize="end"	 />

				</LinearLayout>
						
			</LinearLayout> <!-- Vertical -->
			
		</LinearLayout>>

	</RelativeLayout>
          <LinearLayout
            android:layout_width="181dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginTop="22dip">
            
                <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal">
		            
		            <ImageView
			            android:id="@+id/canuse_sign"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"       
			            android:background="@drawable/bullet_plus"
			            android:contentDescription="부호"
			            android:layout_marginLeft="6dp"
			            android:layout_marginTop="2dip"
			            android:gravity="center_vertical"/>

			        <TextView
				          android:id="@+id/canuse_value"			        
				          android:text=""
				          android:textColor="#519CDD"
				          android:textSize="14dip"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"      
				          android:layout_marginLeft="3dip"
				          android:gravity="center_vertical"/>

			        <TextView				 
				          android:text="P"
				          android:textColor="#606060"
				          android:textSize="14dip"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"        
				          android:layout_marginLeft="2dip"
				          android:gravity="center_vertical"/>
            	</LinearLayout>
            	
            <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_marginTop="12dip">
		            
		            <ImageView
			            android:id="@+id/lastuse_sign"		            
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"	            
			            android:background="@drawable/bullet_plus"
			            android:contentDescription="부호"
			            android:layout_marginLeft="6dp"
			            android:layout_marginTop="2dip"
			            android:gravity="center_vertical"/>

			        <TextView
			          android:id="@+id/lastuse_value" 
			          android:text=""
			          android:textColor="#519CDD"
			          android:textSize="14dip"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"      
			          android:layout_marginLeft="3dip"
			          android:gravity="center_vertical"/>

			        <TextView
			          android:text="P"
			          android:textColor="#606060"
			          android:textSize="14dip"
			          android:layout_width="wrap_content"
			          android:layout_height="wrap_content"        
			          android:layout_marginLeft="2dip"
			          android:gravity="center_vertical"
			        />

            	</LinearLayout>
            <TextView 
                android:id ="@+id/txt_card_number"
                android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dip"
				android:paddingLeft="6dip"
				android:text="개"
				android:textSize="14dip"
				android:textColor="#606060"/>
            <TextView 
                android:id ="@+id/txt_interest_area"
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
             	android:layout_marginTop="13dip"
            	android:paddingLeft="6dip"
            	android:text="지정하기"
             	android:textSize="14dip"
            	android:textColor="#606060"/>
            <TextView 
                android:id ="@+id/txt_interest_category"
                android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
             	android:layout_marginTop="13dip"
             	android:paddingLeft="6dip"
            	android:text="지정하기"
             	android:textSize="14dip"
            	android:textColor="#606060"/>
            </LinearLayout>
          </LinearLayout>
          <ImageButton
            android:id="@+id/btn_pi_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="11dip"
            android:background="@drawable/btn_pi_close" android:layout_alignParentRight="true" android:layout_alignBottom="@id/searcher_box"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/map_preventer"
	>
    </LinearLayout>
</LinearLayout>